<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Listing Page</title>
    <link rel="stylesheet" type="text/css" href="../styles/login.css" />

</head>
<body>
    <h1>Fish Inventory</h1>
    <table>
        <thead>
            <tr>
                <th>ID</th>
                <th>Name</th>
                <th>Price</th>
                <th>Availability</th>
            </tr>
        </thead>
        <tbody>
            <% fishInventory.forEach(fish => { %>
                <tr>
                    <td><%= fish.fish_id %></td>
                    <td> <% if (isLoggedIn) { %>
                        <a href="/prodpage?fishName=<%= encodeURIComponent(fish.fish_name) %>&LoggedStatus=<%= encodeURIComponent(true) %>"><%= fish.fish_name %></a>
                        <% } else { %>
                        <a href="/prodpage?fishName=<%= encodeURIComponent(fish.fish_name) %>&LoggedStatus=<%= encodeURIComponent(false) %>"><%= fish.fish_name %></a>
                    <% } %></td>

                    <td><%= fish.price %></td>
                    <td><%= fish.in_stock %></td>
                </tr>
            <% }); %>
        </tbody>
    </table>
    <script src="../middleware/listing.js" defer></script>
</body>
</html>